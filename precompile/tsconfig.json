{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["ES2020", "dom"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "commonjs",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/main",
    "pretty": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2020",
    "traceResolution": false,
    "typeRoots": ["../node_modules/@types", "../src/types"],
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules/**", "../src/types", "./build/main"],
  "compileOnSave": false
}
